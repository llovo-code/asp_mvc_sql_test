@model Test_ASP_MVC.Models.ViewModels.Articulos_Model
@{
    ViewBag.Title = "Agregar articulo";
}

<h2>@ViewBag.Title</h2>
<div class="container p-4 ">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    
                    @using (Html.BeginForm("AddArticle", "Articulos", FormMethod.Post))
                    {
                        <div class="form-group">
                            <p>Codigo del Articulo</p>
                            @Html.TextBoxFor(d => d.Codigo_Articulo, "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <p>Descripcion</p>
                            @Html.TextBoxFor(d => d.Descripicon, "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <p>Codigo de Categoria</p>
                            @Html.TextBoxFor(d => d.Cod_categoria, "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <p>Precio</p>
                            @Html.TextBoxFor(d => d.Precio, "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>